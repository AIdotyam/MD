<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Corner Radius -->
    <corners android:radius="8dp" />

    <!-- Background Color -->
    <solid android:color="@color/white" />

    <!-- Optional Stroke (Border) -->
    <stroke
        android:width="1dp"
        android:color="@color/gray" />

    <!-- Optional Shadow Effect (for pre-Lollipop devices, use card elevation otherwise) -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
